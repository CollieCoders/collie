{
  "name": "collie",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r --filter='@collie-lang/*' build",
    "dev": "pnpm -r --parallel --filter='@collie-lang/*' dev",
    "clean": "pnpm -r clean && rimraf node_modules",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset publish",
    "prepare:cdn": "pnpm --filter @collie-lang/html-runtime prepare-cdn",
    "test": "pnpm -r --filter='@collie-lang/*' test && vitest run tests",
    "test:integration": "vitest run tests"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@types/node": "^22.10.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.3.0"
    }
  }
}
