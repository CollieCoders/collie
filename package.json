{
  "name": "collie",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm run build:core",
    "build:core": "pnpm --filter @collie-lang/config build && pnpm --filter @collie-lang/compiler build && pnpm --filter @collie-lang/vite build && pnpm --filter @collie-lang/cli build",
    "dev": "pnpm -r --parallel --filter='@collie-lang/*' dev",
    "clean": "pnpm -r clean && rimraf node_modules",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset publish",
    "test": "pnpm -r --filter='@collie-lang/*' test",
    "relink": "scripts/reset-collie-links.sh",
    "file-tree": "tree -l 20 -o file-tree.txt --ignore='node_modules/'",
    "local:pack": "node scripts/local-pack.mjs",
    "local:clean": "rimraf .local-packs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@types/node": "^22.10.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.3.0",
      "vitest": "^4.0.16"
    }
  }
}
